			StateStatus? OnStateThink(BaseAIBrain<HumanNPC>.BaseFollowPathState state,float delta){
				//Puts(":");
				if(!(state.brain.OwningPlayer==null)){
					if(!(state.brain.OwningPlayer.transform==null)){
					
						if (Vector3.Distance(state.brain.OwningPlayer.transform.position,state.brain.transform.position) > 10f || state.currentWaitTime >= 120f)
